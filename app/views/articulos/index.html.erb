
<p id="notice"><%= notice %></p>

<h1>Articulos</h1>
<div class="well well-sm">
  <div class="well well-sm">

      <label>Busqueda: </label>
      <div class="form-group">
      <%= f.search_field :titulo_or_contenido_cont,:class => "form-control",
             placeholder: "Busqueda avanzada", size: "50"  %>


  </select>
      </div>
      <submit class="btn btn-success btn-sm">
          <%= image_tag("search.png") %>
      </submit>

  <% end %>
</div>

<div class="comtainer">
    <div class="col-md-12">
  <div class="row">
<div class="col-md-8">   
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Contenido</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articulos.each do |articulo| %>
      <tr>
        <td><%= articulo.titulo %></td>
        <td><%= articulo.contenido %></td>
        <td><%= link_to 'Ver', articulo, class: "btn btn-success" %></td>
        <td><%= link_to 'Editar', edit_articulo_path(articulo), class:"btn btn-warning" %></td>
        <td><%= link_to 'Eliminar', articulo, method: :delete, data: { confirm: 'Seguro que quieres elimninarlo?' }, class:"btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
  </div>
</div>
<br>
<div class="col-xs-3 col-md-8">
<%= link_to 'Nuevo Articulo', new_articulo_path,class:"btn btn-info", remote:true %>
</div>

<%= will_paginate @articulos, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente &raquo;' %>
<br>
Articulos: <%= @articulos.count %>
<br><br>
<div class="col-xs-3 col-md-8">
<div id="form"></div>
</div>
<%=render'dsfd'%>