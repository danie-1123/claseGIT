<h2>Ingresar</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
      <label for="nombre" class="col-sm-3 control-label">Email</label>
      <div class="col-sm-4">
        <%= f.input :email, label: false, as: :string,autofocus: true, class: "form-control" %>
      </div>
    </div> 
       <div class="form-group">
      <label for="nombre" class="col-sm-3 control-label">Contrase√±a</label>
      <div class="col-sm-4">
        <%= f.input :password, label: false, as: :string,autofocus: true, class: "form-control" %>
      </div>
    </div>    
  <div class="form-group">
       <div class="form-group">
      <div class="col-sm-4">
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
    </div>     
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Ingresar" %>
  </div>
<% end %>

